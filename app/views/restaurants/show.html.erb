<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://source.unsplash.com/featured/?<%= @restaurant.category %>&<%= rand(1000) %>/800x333);">
  <div class="container">
  </div>
</div>
<div class="container mt-2">
  <div class="row justify-content-around">
    <div class="col-12 col-sm-8">
      <p><%= link_to '< Restaurants', restaurants_path, class: 'btn-light opacity-25 text-decoration-none' %></p>
      <div class="d-flex align-items-center">
        <h1 class="m-0"><%= @restaurant.name %></h1>
        <p class="m-0 ms-2" style="font-size: 0.8em">
          <% @restaurant.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @restaurant.rating).times do %>
            <i class="far fa-star"></i>
          <% end %>
        </p>
      </div>
      <p class="fw-lighter opacity-75 mt-2"><%= Faker::Restaurant.description  %></p>
    </div>
    <div class="col-12 col-sm-4 mt-5">
      <p class="fw-lighter opacity-75">
        <i class="fas fa-map-pin"></i><span class='ms-2'><%= @restaurant.address %></span>
      </p>
      <p class="fw-lighter opacity-75">
        <% rand(2..5).times do %>
          <i class="fas fa-dollar-sign"></i>
        <% end %>
      </p>
      <p class="fw-lighter opacity-75">
        <i class="fas fa-utensils"></i></i><span class='ms-2'><%= @restaurant.category %></span>
    </p>
    <div class="d-flex">
      <%= link_to edit_restaurant_path(@restaurant) do %>
        <i class="fas fa-pencil-alt btn-light mx-1"></i>
      <% end %>
      <%= link_to restaurant_path(@restaurant), method: :delete, data: { confirm: "Do you want to delete #{@restaurant.name}" } do %>
        <i class="fas fa-trash btn-light mx-1"></i>
      <% end %>
    </div>
  </p>
</div>
